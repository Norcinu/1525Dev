<Window x:Class="PDTUtils.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingWindow" Height="1080" Width="1920" Background="Black"
        ContentRendered="Window_ContentRendered" WindowState="Maximized" WindowStyle="None" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="48" Background="Gray" Foreground="Red" HorizontalContentAlignment="Center" Margin="10">Loading</Label>
            <ProgressBar Name="PbStatus" Minimum="0" Maximum="100" Value="0" Width="400" Height="50" Margin="10" IsIndeterminate="True"></ProgressBar>
        </StackPanel>
    </Grid>
</Window>
